<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/infoPageBackgroundColor"
    android:orientation="vertical"
    android:paddingTop="8dp"
    tools:context="net.lorenzburghardt.burgisbapperl.StickerPackInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tray_icon"
            style="@style/InfoButtonStyle"
            android:clickable="false"
            android:text="@string/info_screen_tray_icon"
            android:textColor="#B9B9B9"
            tools:drawableLeft="@drawable/web"
            tools:drawableStart="@drawable/web" />

        <TextView
            android:id="@+id/view_webpage"
            style="@style/InfoButtonStyle"
            android:drawableStart="@drawable/web"
            android:drawableLeft="@drawable/web"
            android:text="@string/view_webpage" />

        <TextView
            android:id="@+id/send_email"
            style="@style/InfoButtonStyle"
            android:drawableLeft="@drawable/mail"
            android:drawableStart="@drawable/mail"
            android:text="@string/send_email" />

        <TextView
            android:id="@+id/privacy_policy"
            style="@style/InfoButtonStyle"
            android:drawableStart="@drawable/lock"
            android:drawableLeft="@drawable/lock"
            android:text="@string/privacy_policy" />

        <TextView
            android:id="@+id/license_agreement"
            style="@style/InfoButtonStyle"
            android:drawableStart="@drawable/text"
            android:drawableLeft="@drawable/text"
            android:text="@string/license_agreement" />

    </LinearLayout>
</LinearLayout>
